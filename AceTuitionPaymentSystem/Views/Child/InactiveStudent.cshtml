                //    $("#inactivestudentModal").modal('show');
                //});

                console.log(EditchildIc);
            
        });
       
        
       
        var table;
        var selectedCheckBoxArray = [];
        $(document).ready(function () {
            table=$("#childTable").DataTable({
                "language": {
                    "emptyTable": "No data found.",

                },

                buttons: [
                    {
                        extend: 'csvHtml5',
                        title: 'Ace Education Inactive Student List',
                        exportOptions:
                        {
                            columns: [0,2,3,4,5,6]
                        }
                    },
                    {
                        extend: 'excelHtml5',
