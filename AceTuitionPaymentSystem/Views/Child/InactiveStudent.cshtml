                        exportOptions: {
                            columns: [0, 2, 3, 4, 5, 6]
                        }
                    }
                ]

            })
            table.buttons().container()
                .appendTo('#childTable_wrapper .col-md-6:eq(0)');
        });



        function deleteChild() {
            var ic = childIc;

            var formData = new FormData();
            formData.append("child_ic", ic);
            //spinner.show();
            $.ajax({
                async: true,
                dataType: 'JSON',
                type: 'POST',
                contentType: false,
                processData: false,
                url: '/Child/Delete',
                data: formData,
                success: function (data) {
                    if (data.Success) {
                        $("#modal-child").hide();
                        toastr.options.timeOut = 2000;
                        toastr.options.progressBar = true;
                        toastr.options.onHidden = function () {
                            window.location.reload();
                        }

                        toastr.success(data.Message, { timeOut: 1000 });
                    }
                },
                error: function () {
                    toastr.error("There is some problem to delete child.");
                }
            })
        }


        function validateChildStatus() {
            
            if ($("#child_name_eng").val() == null || $.trim($("#child_name_eng").val()) == '') {
                toastr.options.closeButton = true;
                toastr.warning("Student's English Name is required to fill.", 'Warning');
                return;
            }

            if ($("#child_name_chinese").val() == null || $.trim($("#child_name_chinese").val()) == '') {
                toastr.options.closeButton = true;
                toastr.warning("Student's Chinese Name is required to fill.", 'Warning');
                return;
            }

           
            if ($("#child_year").val() == null || $.trim($("#child_year").val()) == '' || $("#child_year").val() == 'Select Grade') {
                toastr.options.closeButton = true;
                toastr.warning("Student's Grade is required to fill.", 'Warning');
                return;
            }


            if ($("#child_reg_date").val() == null || $("#child_reg_date").val() == '') {
                toastr.options.closeButton = true;
                toastr.warning("Registration Date is required to fill.", 'Warning');
                return;
            }

            return true;
        }

        function UpdateStatus() {
            var modal = $("#inactivestudentModal");
            var form = $('form[name="inactivestudentForm"]');

            if (!validateChildStatus()) {
                return;
            }

            var data = form.serialize();
            $.post("/Child/UpdateStatus", data, function (res) {
                if (res.success) {
                    modal.hide();
                    toastr.options.timeOut = 2000;
                    toastr.options.progressBar = true;
                    toastr.options.onHidden = function () {
                        window.location.reload();
                    }

                    toastr.success(res.message, { timeOut: 1000 });
                }
                else {
                    toastr.error("There is some error occur.");
                }

            });



        }

    </script>
