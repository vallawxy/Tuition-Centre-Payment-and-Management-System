                                                    if (balance.parent_ic == parents.parent_ic)
                                                    {
                                                        total_bal = total_bal + balance.balance_amount;

                                                    }
                                                }

                                                @if (total_bal > 0)
                                                {
                                                    <td>RM @total_bal</td>

                                                }
                                                else
                                                {
                                                    <td><span style="color:grey;font-size:13px;">None</span></td>
                                                }


                                                @if (parents.parent_status == "active")
