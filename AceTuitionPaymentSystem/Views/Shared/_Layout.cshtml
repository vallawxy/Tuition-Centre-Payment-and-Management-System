                    if ($("#admin_phone_number").val() == null || $.trim($("#admin_phone_number").val()) == '') {
                        toastr.options.closeButton = true;
                        toastr.warning("Admin Phone is required to fill.", 'Warning');
                        return;
                    }

                    return true;
                }


                function updateAdmin() {
                    var modal = $("#adminModal");
                    var form = $('form[name="adminForm"]');

                    if (!validateEditadmin()) {
                        return;
                    }

                    var data = form.serialize();
                    $.post("/Admin/UpdateAdmin", data, function (res) {
                        if (res.success) {
                            modal.modal('hide');
                            toastr.options.timeOut = 2000;
                            toastr.options.progressBar = true;
                            toastr.options.onHidden = function () {
                                window.location.reload();
                            }

                            toastr.success(res.message, { timeOut: 1000, "closeButton": true });
                        }

                    });
                }



                function createAdmin() {
                    var modal = $("#adminCreateModal");
                    var form = $('form[name="adminCreateForm"]');

                    if (!validateCreateadmin()) {
                        return;
                    }

                    var data = form.serialize();

                    $.post("/Admin/Create", data, function (res) {
                        if (res.success) {
                            modal.modal('hide');
                            toastr.options.timeOut = 2000;
                            toastr.options.progressBar = true;
                            toastr.options.onHidden = function () {
                                window.location.reload();
                            }

                            toastr.success(res.message, { timeOut: 1000, "closeButton": true });
                        }
                        else {
                            toastr.error(res.message, { timeOut: 1000, "closeButton": true });

                        }

                    });
                }


