            <script>
                function getParent(btn) {
                    var id = $(btn).attr("data-parent-id");
                    console.log(id);

                    $.get("/Parents/ParentEdit", { id: id }, function (res) {
                        $("#ParentEditmodalBody").html(res);
                        $("#parentEditModal").modal('show');
                    })
                }

                function getAdmin(btn) {
                    var id = $(btn).attr("data-admin-id");
                    console.log(id);

                    $.get("/Admin/EditAdmin", { id: id }, function (res) {
                        $("#AdminmodalBody").html(res);
                        $("#adminModal").modal('show');
                    })
                }


                function getCreateAdmin(id) {
                    /*var id = $(btn).attr("data-admincreate-id");*/
                    $.get("/Admin/CreateAdmin", { id: id }, function (res) {
                        $("#AdminCreatemodalBody").html(res);
                        $("#adminCreateModal").modal('show');
                    })
                }


                function validateParent() {
                    if ($("#parent_ic").val() == null || $.trim($("#parent_ic").val()) == '') {
                        toastr.options.closeButton = true;
                        toastr.warning("Parent IC is required to fill.", 'Warning');
                        return;
                    }

                    if ($("#parent_ic").val().length != 12 || $.trim($("#parent_ic").val()) == '') {
                        toastr.options.closeButton = true;
                        toastr.warning("Parent IC is required 12 digits.", 'Warning');
                        return;
                    }


                    if ($("#parent_name").val() == null || $.trim($("#parent_name").val()) == '') {
                        toastr.options.closeButton = true;
                        toastr.warning("Parent Name is required to fill.", 'Warning');
                        return;
                    }

                    if ($("#parent_address").val() == null || $.trim($("#parent_address").val()) == '') {
                        toastr.options.closeButton = true;
                        toastr.warning("Parent Address is required to fill.", 'Warning');
                        return;
                    }
                    if ($("#parent_phone").val() == null || $.trim($("#parent_phone").val()) == '') {
                        toastr.options.closeButton = true;
                        toastr.warning("Parent Phone is required to fill.", 'Warning');
                        return;
                    }

                    if ($("#new-password").is(":hidden")) {

                    } else {
                        if ($("#parent_confirm_password").val() != $("#parent_new_password").val()) {
                            toastr.options.closeButton = true;
                            toastr.warning("New Password and Confirm Password are not matched.", 'Warning');
                            return;
                        }

                        if ($("#parent_new_password").val().length < 6) {
                            toastr.options.closeButton = true;
                            toastr.warning("New Password is required 6 digits.", 'Warning');
                            return;
                        }

                    }
                    
                    
                    return true;
                }

                function create() {
                    var modal = $("#parentModal");
                    var form = $('form[name="parentsForm"]');

                    //if (!validate()) {
                    //    return;
                    //}

                    var data = form.serialize();

                    $.post("/Parents/CreateParent", data, function (res) {
                        if (res.success) {
                            modal.modal('hide');
                            toastr.options.timeOut = 2000;
                            toastr.options.progressBar = true;
                            toastr.options.onHidden = function () {
                                window.location.reload();
                            }

                            toastr.success(res.message, { timeOut: 1000, "closeButton": true });
                        }
                        else {
                            toastr.error(res.message, { timeOut: 1000, "closeButton": true });

                        }

                    });
                }

                function updateParent() {
                    var modal = $("#parentEditModal");
                    var form = $('form[name="parentsEditForm"]');

                    if (!validateParent()) {
                        return;
                    }

                    var data = form.serialize();
                    $.post("/Parents/UpdateParent", data, function (res) {
                        if (res.success) {
                            modal.modal('hide');
                            toastr.options.timeOut = 2000;
                            toastr.options.progressBar = true;
                            toastr.options.onHidden = function () {
                                window.location.reload();
                            }

                            toastr.success(res.message, { timeOut: 1000, "closeButton": true });
                        }
                        else {
                            toastr.warning(res.message, { timeOut: 1000, "closeButton": true });
                        }

                    });
                }


                function validateEditadmin() {
                    if ($("#admin_ic").val() == null || $.trim($("#admin_ic").val()) == '') {
                        toastr.options.closeButton = true;
                        toastr.warning("Admin IC is required to fill.", 'Warning');
                        return;
                    }

                    if ($("#admin_ic").val().length != 12) {
                        toastr.options.closeButton = true;
                        toastr.warning("Admin IC is required 12 digits.", 'Warning');
                        return;
                    }


                    if ($("#admin_name").val() == null || $.trim($("#admin_name").val()) == '') {
                        toastr.options.closeButton = true;
                        toastr.warning("Admin Name is required to fill.", 'Warning');
                        return;
                    }

            
                    if ($("#admin_phone_number").val() == null || $.trim($("#admin_phone_number").val()) == '') {
                        toastr.options.closeButton = true;
                        toastr.warning("Admin Phone is required to fill.", 'Warning');
                        return;
                    }

                    if ($("#admin_confirm_password").val() != $("#admin_new_password").val()) {
                        toastr.options.closeButton = true;
                        toastr.warning("New Password and Confirm Password are not matched.", 'Warning');
                        return;
                    }

                    if ($("#admin_new_password").val().length < 6) {
                        toastr.options.closeButton = true;
                        toastr.warning("New Password is required 6 digits.", 'Warning');
                        return;
                    }


                    return true;
                }

                function validateCreateadmin() {
                    if ($("#admin_ic").val() == null || $.trim($("#admin_ic").val()) == '') {
                        toastr.options.closeButton = true;
                        toastr.warning("Admin IC is required to fill.", 'Warning');
                        return;
                    }

                    if ($("#admin_ic").val().length != 12 || $.trim($("#admin_ic").val()) == '') {
                        toastr.options.closeButton = true;
                        toastr.warning("Admin IC is required 12 digits.", 'Warning');
