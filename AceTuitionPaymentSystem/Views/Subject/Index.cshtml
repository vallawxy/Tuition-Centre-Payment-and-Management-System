                                                <td>Standard 6</td>
                                            }
                                            else if (@subject.subject_grade == "12")
                                            {
                                                <td>Peralihan</td>
                                            }
                                            else if (@subject.subject_grade == "7")
                                            {
                                                <td>Form 1</td>
                                            }
                                            else if (@subject.subject_grade == "8")
