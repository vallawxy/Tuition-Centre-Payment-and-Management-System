                                                <td>Form 3</td>
                                            }
                                            else if (@subject.subject_grade == "10")
                                            {
                                                <td>Form 4</td>
                                            }
                                            else if (@subject.subject_grade == "11")
                                            {
                                                <td>Form 5</td>
                                            }


                                            @if (subject.subject_status == "active")
                                            {
                                                <td>Active</td>
                                            }
                                            else if (subject.subject_status == "inactive")
                                            {
                                                <td>Inactive</td>
                                            }
