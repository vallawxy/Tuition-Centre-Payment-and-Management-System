@model AceTuitionPaymentSystem.Models.tb_notice
@{

}



<form name="noticeForm">
    @Html.AntiForgeryToken()

    <div class="modal-header">

        <h4 class="modal-title">

            @if (Model.notice_id > 0)
            {
                <span><strong>Edit Notice</strong></span>
            }
            else
            {
                <span><strong>Create Notice</strong></span>
            }

        </h4>
        <div style="text-align:right;">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
    <div class="modal-body">
        @Html.HiddenFor(model => model.notice_id)
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Title</label>
                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control", required = true } })
                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                </div>
          
                <div class="form-group">
                    <label>Description</label>
                    <br />
                    @Html.TextAreaFor(model => model.description, 4, 60, new { @class = "form-control" , @style= "text-align: justify" })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger", })
                </div>
     

            </div>
        </div>
    </div>
    <div class="modal-footer">

        <button type="button" name="save" onclick="createOrUpdate()" class="btn btn-primary pull-right">Save</button>

    </div>
</form>
