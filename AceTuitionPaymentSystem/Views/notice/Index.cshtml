    <script>
       
      
        var noticeId = "";
        $(document).on("click", ".deleteNotice", function () {
            noticeId = $(this).attr('data-notice');

            console.log(noticeId);
        });
        
        function removeNote() {
           

            var formData = new FormData();
            formData.append("notice_id", noticeId);
            console.log(noticeId);
           
                $.ajax({
                    async: true,
                    dataType: 'JSON',
                    type: 'POST',
                    contentType: false,
                    processData: false,
                    url: '/notice/Delete',
                    data: formData,
                    success: function (data) {
                        if (data.Success) {
                            $("#modal-notice").hide();
                            toastr.options.timeOut = 1000;
                            toastr.options.progressBar = true;
                            toastr.options.onHidden = function () {
                                window.location.reload();
                            }
                            toastr.success(data.message, { timeOut: 1000});

                        }

                        else { toastr.error("There is some problem to delete notice.", { timeOut: 1000, "closeButton": true }); }
                    },
                    error: function () {
                        toastr.error("There is some problem to delete notice.", { timeOut: 1000, "closeButton": true });

                    }
                })
        
        }



        function getNotice(id) {
            $.get("/notice/Create", { id: id }, function (res) {
                $("#NoticemodalBody").html(res);
                $("#noticeModal").modal('show');
            })
        }

        function validate() {
            if ($("#title").val() == null || $.trim($("#title").val()) == '') {
                toastr.options.closeButton = true;
                toastr.warning("Ttile is required to fill.", 'Warning');
                return;
            }

            if ($("#description").val() == null || $.trim($("#description").val()) == '') {
                toastr.options.closeButton = true;
                toastr.warning("Description is required to fill.", 'Warning');
                return;
            }

            return true;
        }



        function createOrUpdate() {
            var modal = $("#noticeModal");
            var form = $('form[name="noticeForm"]');

            if (!validate()) {
                return;
            }

            var data = form.serialize();

            $.post("/notice/CreateOrUpdate", data, function (res) {
                if (res.success) {
                    $("#noticeModal").hide();
                    toastr.options.timeOut = 2000;
                    toastr.options.progressBar = true;
                    toastr.options.onHidden = function () {
                        window.location.reload();
                    }

                    toastr.success(res.message, { timeOut: 1000 });
                }

            });



        }


    </script>

